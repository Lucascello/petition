<div class="design">
    <br /><br />
    <img class="pissoir" src="/closed.jpg" alt="" />
    <br />
    <h2> <u>Edit your profile</u> </h2>
    <form method="POST">
        <div class="description">
            <input
                type="text"
                id="sign"
                name="first"
                placeholder=""
                value=""
                autocomplete="off"
                required
            />
            <h4>First Name</h4>
        </div>
        <div class="description">
            <input
                type="text"
                id="sign"
                name="last"
                placeholder=""
                value=""
                autocomplete="off"
                required
            />
            <h4>Last Name</h4>
        </div>
        <div class="description">
            <input
                type="email"
                id="sign"
                name="email"
                placeholder=""
                value=""
                autocomplete="off"
                required
            />
            <h4>Email Address</h4>
        </div>
        <div class="description">
            <input
                type="password"
                id="sign"
                name="password"
                minlength="8"
                placeholder=""
                value=""
                autocomplete="off"
                required
            />
            <h4>Password</h4>
        </div>
        <div class="description">
            <input
                type="number"
                id=""
                name="age"
                placeholder=""
                value=""
                autocomplete="off"
            />
            <h4>Age</h4>
        </div>
        <div class="description">
            <input
                type="text"
                id=""
                name="city"
                placeholder=""
                value=""
                autocomplete="off"
            />
            <h4>City</h4>
        </div>
        <div class="description">
            <input
                type="url"
                id=""
                name="url"
                pattern="(https://.*)|(http://.*)|(//.*)"
                minlength="8"
                placeholder=""
                value=""
                autocomplete="off"
            />
            <h4>Homepage</h4>
        </div>
        <br />
        <br />
        <button class="prof">CONTINUE</button>
    </form>
    <br />

</div>