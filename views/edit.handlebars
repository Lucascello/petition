<div class="design">
    <br /><br />
    <img class="closed" src="/closed.jpg" alt="" />
    <br />
    <h2> <u>Edit your profile</u> </h2>
    <form method="POST">
        {{#allData}}
            <div class="description">
                <h4>First Name</h4>
                <input
                    type="text"
                    id="first"
                    name="first"
                    placeholder=""
                    value="{{this.first}}"
                    autocomplete="off"
                />
            </div>
            <div class="description">
                <h4>Last Name</h4>
                <input
                    type="text"
                    id="last"
                    name="last"
                    placeholder=""
                    value="{{this.last}}"
                    autocomplete="off"
                />
            </div>
            <div class="description">
                <h4>Email Address</h4>
                <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder=""
                    value="{{this.email}}"
                    autocomplete="off"
                />
            </div>
            <div class="description">
                <h4>Password</h4>
                <input
                    type="password"
                    id="password"
                    name="password"
                    minlength="8"
                    placeholder=""
                    value=""
                    autocomplete="off"
                />
            </div>
            <div class="description">
                <h4>Age</h4>
                <input
                    type="number"
                    id=""
                    name="age"
                    placeholder=""
                    value="{{this.age}}"
                    autocomplete="off"
                />
            </div>
            <div class="description">
                <h4>City</h4>
                <input
                    type="text"
                    id=""
                    name="city"
                    placeholder=""
                    value="{{this.city}}"
                    autocomplete="off"
                />
            </div>
            <div class="description">
                <h4>Homepage</h4>
                <input
                    type="url"
                    id=""
                    name="url"
                    pattern="(https://.*)|(http://.*)|(//.*)"
                    minlength="8"
                    placeholder=""
                    value="{{this.url}}"
                    autocomplete="off"
                />
            </div>
            <br />
            <br />
            <button class="update">Update</button>
        {{/allData}}
    </form>
    <br />

</div>